#include "main.h"

/**
 *print_triangle - print triangles of the given size
 *@size: size of the triangle to be printed
 */

void print_triangle(int size)
{
	int h, i;

	if (size > 0)
	{
		for (h = size; h > 0; h--)
		{
			for (i = 0; i < h - 1; i++)
				_putchar(' ');
			for (i = 0; i <= (size - h); i++)
				_putchar('#');

			if (h = 1)
				continue;
			_putchar('\n');
		}
	}
	_putchar('\n');
}
